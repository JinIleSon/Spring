<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ch05.mapper.User2Mapper">

    <insert id="insertUser2">
        insert into user2 values (#{userId}, #{userName}, #{birth}, #{age})
    </insert>

    <select id="selectAllUser2" resultType="kr.co.ch05.dto.User2DTO">
        select * from user2
    </select>

    <select id="selectUser2" resultType="kr.co.ch05.dto.User2DTO">
        select * from user2 where userId=#{userId}
    </select>

    <update id="updateUser2">
        update user2 set userName=#{userName}, birth=#{birth}, age=#{age} where userId=#{userId}
    </update>

    <delete id="deleteUser2">
        delete from user2 where userId=#{userId}
    </delete>
</mapper>